---
const navItems = [
  { label: 'Property Management', href: '/property-management' },
  { label: 'HOA Management', href: '/hoa-management' },
  { label: 'Salon & Spa', href: '/salon-management' },
  { label: 'About', href: '/about' },
  { label: 'Methodology', href: '/methodology' },
];
---

<!-- Affiliate Disclosure Bar -->
<div class="disclosure-bar">
  <p>
    PickStack.ai earns a commission when you purchase through our links, at no extra cost to you.&nbsp;
    <a href="/methodology">Learn about our methodology →</a>
  </p>
</div>

<!-- Navigation -->
<header class="nav" role="banner">
  <!-- Logo -->
  <a href="/" class="nav-logo" aria-label="PickStack.ai Home">
    <div class="nav-logo-icon" aria-hidden="true">
      <div class="nav-bar nav-bar-1"></div>
      <div class="nav-bar nav-bar-2"></div>
      <div class="nav-bar nav-bar-3"></div>
    </div>
    <div class="nav-wordmark">
      PickStack<span class="nav-ai">.ai</span>
    </div>
  </a>

  <!-- Desktop Navigation -->
  <nav class="nav-links" aria-label="Main navigation">
    {navItems.map((item) => (
      <a href={item.href} class="nav-link">{item.label}</a>
    ))}
    <a href="/property-management" class="nav-cta">See Top Picks →</a>
  </nav>

  <!-- Mobile Menu Button -->
  <button
    id="mobile-menu-btn"
    class="md:hidden"
    aria-label="Toggle navigation menu"
    style="background:none;border:none;cursor:pointer;padding:8px"
  >
    <svg width="22" height="22" fill="none" stroke="white" stroke-width="2.5" viewBox="0 0 24 24">
      <path stroke-linecap="round" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
</header>

<!-- Mobile Dropdown -->
<div
  id="mobile-menu"
  style="display:none; background:#0F2D56; padding:16px 24px 24px; border-bottom:2px solid #E8A820;"
>
  {navItems.map((item) => (
    <a
      href={item.href}
      style="display:block; color:rgba(255,255,255,0.85); font-size:15px; font-weight:500; padding:10px 0; border-bottom:1px solid rgba(255,255,255,0.1); text-decoration:none;"
    >
      {item.label}
    </a>
  ))}
  <a
    href="/property-management"
    style="display:inline-block; margin-top:16px; background:#E8A820; color:#0F2D56; font-weight:700; font-size:14px; padding:10px 20px; border-radius:8px; text-decoration:none;"
  >
    See Top Picks →
  </a>
</div>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    const isHidden = menu?.style.display === 'none';
    if (menu) menu.style.display = isHidden ? 'block' : 'none';
  });
</script>
