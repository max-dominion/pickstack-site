---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const roundups = await getCollection('roundups', ({ data }) => data.vertical === 'property-management');
const comparisons = await getCollection('comparisons', ({ data }) => data.niche === 'property-management');

const comparisonContent = [
  {
    title: 'Stessa vs Baselane',
    description: 'Financial tracking vs. integrated landlord banking.',
    href: '/comparisons/stessa-vs-baselane',
  },
  {
    title: 'Stessa vs TurboTenant',
    description: 'Investor tracking vs. free landlord management.',
    href: '/comparisons/stessa-vs-turbotenant',
  },
  {
    title: 'Stessa vs RentRedi',
    description: 'Portfolio analytics vs. mobile-first management.',
    href: '/comparisons/stessa-vs-rentredi',
  },
  {
    title: 'Stessa vs Landlord Studio',
    description: 'Automated tracking vs. hands-on bookkeeping for DIY landlords.',
    href: '/comparisons/stessa-vs-landlord-studio',
  },
  {
    title: 'TurboTenant vs Avail',
    description: 'The two most popular free platforms compared.',
    href: '/comparisons/turbotenant-vs-avail',
  },
  {
    title: 'TurboTenant vs RentRedi',
    description: 'Free vs. affordable full-suite management.',
    href: '/comparisons/turbotenant-vs-rentredi',
  },
  {
    title: 'Buildium vs Rent Manager',
    description: 'Two enterprise PM platforms for professional managers.',
    href: '/comparisons/buildium-vs-rent-manager',
  },
  {
    title: 'Buildium vs Yardi Breeze',
    description: 'Full-featured platform vs. enterprise-lite alternative.',
    href: '/comparisons/buildium-vs-yardi-breeze',
  },
  {
    title: 'Buildium vs AppFolio',
    description: 'Enterprise property management platforms head-to-head.',
    href: '/comparisons/buildium-vs-appfolio',
  },
  {
    title: 'RentRedi vs DoorLoop',
    description: 'Mobile-first simplicity vs. feature-rich management.',
    href: '/comparisons/rentredi-vs-doorloop',
  },
  {
    title: 'Baselane vs Landlord Studio',
    description: 'Banking-integrated platform vs. dedicated accounting tool.',
    href: '/comparisons/baselane-vs-landlord-studio',
  },
];
---

<BaseLayout
  title="Best Property Management Software 2026"
  description="Compare the best property management software for small landlords. Honest reviews, head-to-head comparisons, and expert recommendations — all affiliate-disclosed."
>
  <!-- Hero -->
  <section style="background:white; padding:56px 0 48px; border-bottom:1px solid #E5E7EB;">
    <div class="container-layout">
      <!-- Breadcrumb -->
      <nav style="margin-bottom:20px; font-size:13px;">
        <ol style="display:flex; align-items:center; gap:8px; color:#6B7280; list-style:none; padding:0; margin:0;">
          <li><a href="/" style="color:var(--color-link); text-decoration:none;">Home</a></li>
          <li style="color:#D1D5DB">/</li>
          <li style="color:#111827; font-weight:500">Property Management</li>
        </ol>
      </nav>

      <div class="hero-eyebrow" style="text-align:left; display:inline-block;">Software Reviews & Comparisons</div>
      <h1 style="font-size:2.5rem; font-weight:800; color:var(--color-primary); margin:16px 0 16px; letter-spacing:-0.02em; line-height:1.15;">
        Property Management Software
      </h1>
      <p style="font-size:1.1rem; color:#4B5563; max-width:680px; line-height:1.65; margin-bottom:28px;">
        Find the right property management tools for your rental business. We've tested the top options and made honest recommendations — whether you manage a few units or a large portfolio.
      </p>
      <div style="display:flex; gap:12px; flex-wrap:wrap;">
        <a href="#tools" class="btn-primary">See Top Tools →</a>
        <a href="#comparison" class="btn-secondary">Compare All Tools</a>
      </div>
    </div>
  </section>

  <!-- Top Tools Quick Overview -->
  <section style="padding:56px 0; background:#F9FAFB;">
    <div class="container-layout">
      <p class="section-label" style="margin-bottom:8px;">Our Top Picks</p>
      <h2 id="tools" style="font-size:1.6rem; font-weight:700; color:var(--color-primary); margin-bottom:28px;">Best Property Management Software 2026</h2>
      <div style="display:grid; grid-template-columns:repeat(auto-fit, minmax(280px, 1fr)); gap:18px;">
        <div style="background:white; border:1px solid #E5E7EB; border-radius:12px; padding:20px; border-left:4px solid var(--color-accent);">
          <div style="display:flex; gap:6px; margin-bottom:10px; align-items:center;">
            <span class="badge badge-pick">Best Free</span>
          </div>
          <h3 style="font-size:15px; font-weight:700; color:var(--color-primary); margin:0 0 8px; line-height:1.4;">TurboTenant</h3>
          <p style="font-size:13px; color:#6B7280; margin:0; line-height:1.55;">100% free for landlords. Covers listings, applications, screening, lease signing, and rent collection. Best for landlords with 1–10 units.</p>
          <a href="/comparisons/turbotenant-vs-avail" style="display:inline-block; margin-top:12px; font-size:13px; color:var(--color-link); text-decoration:none; font-weight:600;">Compare with Avail →</a>
        </div>
        <div style="background:white; border:1px solid #E5E7EB; border-radius:12px; padding:20px; border-left:4px solid var(--color-accent);">
          <div style="display:flex; gap:6px; margin-bottom:10px; align-items:center;">
            <span class="badge badge-pick">Best for Investors</span>
          </div>
          <h3 style="font-size:15px; font-weight:700; color:var(--color-primary); margin:0 0 8px; line-height:1.4;">Stessa</h3>
          <p style="font-size:13px; color:#6B7280; margin:0; line-height:1.55;">Automated financial tracking, tax-ready reports, and portfolio dashboards. Free tier available. Best for landlords focused on ROI tracking.</p>
          <a href="/comparisons/stessa-vs-baselane" style="display:inline-block; margin-top:12px; font-size:13px; color:var(--color-link); text-decoration:none; font-weight:600;">Compare with Baselane →</a>
        </div>
        <div style="background:white; border:1px solid #E5E7EB; border-radius:12px; padding:20px; border-left:4px solid var(--color-accent);">
          <div style="display:flex; gap:6px; margin-bottom:10px; align-items:center;">
            <span class="badge badge-pick">Best Banking</span>
          </div>
          <h3 style="font-size:15px; font-weight:700; color:var(--color-primary); margin:0 0 8px; line-height:1.4;">Baselane</h3>
          <p style="font-size:13px; color:#6B7280; margin:0; line-height:1.55;">Landlord banking + property management in one. Dedicated accounts, automated bookkeeping, and rent collection. Free for landlords.</p>
          <a href="/comparisons/stessa-vs-baselane" style="display:inline-block; margin-top:12px; font-size:13px; color:var(--color-link); text-decoration:none; font-weight:600;">Compare with Stessa →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparisons -->
  <section style="padding:56px 0; background:white;">
    <div class="container-layout">
      <p class="section-label" style="margin-bottom:8px;">Head-to-Head</p>
      <h2 id="comparison" style="font-size:1.6rem; font-weight:700; color:var(--color-primary); margin-bottom:28px;">Comparisons</h2>
      <div style="display:grid; grid-template-columns:repeat(auto-fit, minmax(280px, 1fr)); gap:18px;">
        {comparisonContent.map((item) => (
          <a href={item.href} style="display:flex; align-items:center; gap:16px; background:white; border:1px solid #E5E7EB; border-radius:12px; padding:18px; text-decoration:none; transition:box-shadow 0.2s;"
            onmouseover="this.style.boxShadow='0 4px 16px rgba(0,0,0,0.08)'"
            onmouseout="this.style.boxShadow='none'">
            <div style="width:44px; height:44px; background:var(--color-accent-light); border-radius:10px; display:flex; align-items:center; justify-content:center; flex-shrink:0; font-size:20px;">⚖️</div>
            <div>
              <div style="font-size:15px; font-weight:700; color:var(--color-primary); margin-bottom:4px;">{item.title}</div>
              <div style="font-size:13px; color:#6B7280;">{item.description}</div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <section style="background:var(--color-primary); padding:56px 0;">
    <div class="container-layout" style="text-align:center;">
      <h2 style="font-size:1.75rem; font-weight:700; color:white; margin-bottom:12px;">Not sure where to start?</h2>
      <p style="color:rgba(255,255,255,0.7); font-size:1rem; margin-bottom:28px; max-width:480px; margin-left:auto; margin-right:auto;">
        Our head-to-head comparisons break down exactly how each tool stacks up — features, pricing, and who it's best for.
      </p>
      <a href="#comparison" class="btn-primary">
        Browse Comparisons →
      </a>
    </div>
  </section>

</BaseLayout>
